<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@color/bkg"
        android:ellipsize="end"
        android:text="@string/calc_txt"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="317dp"
        android:layout_marginTop="4dp"
        android:background="@color/bkg2"
        android:ellipsize="start"
        android:fontFamily="sans-serif-thin"
        android:gravity="bottom|end"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"

        android:textColor="@color/white"
        android:textSize="40sp" />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style="@style/Button_Action"

                android:id="@+id/btn_AC"
                android:text="AC"
                />
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_right"
                android:text="("
                />
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_left"
                android:text=")"
                />

            <TextView
                style="@style/Button_Action"
                android:background="@color/bkg3"
                android:id="@+id/btn_palka"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_7"
                android:text="7"
                />
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_8"
                android:text="8"
                />
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_9"
                android:text="9"
                />

            <TextView
                style="@style/Button_Action"
                android:background="@color/bkg3"
                android:id="@+id/btn_zvezda"
                android:text="*" />
        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_4"
                android:text="4"
                />
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_5"
                android:text="5"
                />
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_6"
                android:text="6"
                />

            <TextView
                style="@style/Button_Action"
                android:background="@color/bkg3"
                android:id="@+id/btn_plus"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_1"
                android:text="1"
                />
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_2"
                android:text="2"
                />
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_3"
                android:text="3"
                />

            <TextView
                style="@style/Button_Action"
                android:background="@color/bkg3"
                android:id="@+id/btn_minus"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_t"
                android:text="."
                />
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_0"
                android:text="0"
                />
            <TextView
                style="@style/Button_Action"
                android:id="@+id/btn_C"
                android:text="C"
                />
            <TextView
                style="@style/Button_Action"
                android:background="@color/bkg4"
                android:id="@+id/btn_ravno"
                android:text="=" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
